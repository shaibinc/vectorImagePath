<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#262626">

    <FrameLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/crop_options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp">



        <com.jiangpeng.android.antrace.autobgremover.MaskEraser
            android:id="@+id/mask_eraser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </FrameLayout>
    <com.jiangpeng.android.antrace.autobgremover.Magnifier
        android:id="@+id/mask_magnifier"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/crop_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        android:background="#878686">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#000000">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="brush size"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="32dp"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="gravity"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="8dp" />
            <SeekBar
                android:id="@+id/brushSizeSeekBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:progress="40"
                android:theme="@style/AutoCrop.BrushSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtBrushSize"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="32dp" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="#DA8A8383"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:id="@+id/imgUndo"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="64dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_undo"
                    app:tint="#000" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Undo"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/imgRedo"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="64dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_redo"
                    android:tint="#000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Redo"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/cancel_crop"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_close"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/transparent"
                    android:alpha="0.8"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/crop_erase"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_crop_erase"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Erase"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
                <View
                    android:id="@+id/erase_active"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/transparent"
                    android:alpha="0.8"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/crop_restore"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_crop_restore"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restore"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
                <View
                    android:id="@+id/restore_active"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/transparent"
                    android:alpha="0.8"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/crop_ok_tick"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackground"
                style="@style/SelectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="4dp"
                    app:srcCompat="@drawable/ic_crop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Crop"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/black"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@android:color/transparent"
                    android:alpha="0.8"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
